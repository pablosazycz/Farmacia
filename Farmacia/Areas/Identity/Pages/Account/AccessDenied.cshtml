@page
@{
    ViewData["Title"] = "Acceso denegado";
    Layout = null;
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - SmartFarma</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <style>
        body {
            background: #f8fdf6;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .denied-card {
            max-width: 420px;
            width: 100%;
            border-radius: 1rem;
            box-shadow: 0 4px 24px #0002;
            background: #fff;
        }

        .denied-card-header {
            background: #e74c3c;
            color: #fff;
            border-radius: 1rem 1rem 0 0;
            text-align: center;
            padding: 2rem 1rem 1rem 1rem;
        }

            .denied-card-header i {
                font-size: 2.5rem;
            }

        .denied-card-body {
            padding: 2rem;
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="denied-card shadow">
        <div class="denied-card-header">
            <i class="bi bi-shield-lock"></i>
            <h2 class="mt-2 mb-0">Acceso denegado</h2>
        </div>
        <div class="denied-card-body">
            <p class="mb-3">No tienes permisos para acceder a esta sección.</p>
            <a href="/" class="btn btn-outline-success w-100">Volver al inicio</a>
        </div>
    </div>
</body>
</html>