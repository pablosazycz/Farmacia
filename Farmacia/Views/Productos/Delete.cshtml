@model Farmacia.Models.Producto

@{
    ViewData["Title"] = "Eliminar Producto";
}

<div class="container my-4">
    <div class="card shadow-sm">
        <div class="card-header bg-danger text-white">
            <h3 class="mb-0"><i class="bi bi-trash"></i> Eliminar Producto</h3>
        </div>
        <div class="card-body">
            <h5 class="mb-3">¿Estás seguro que deseas eliminar este producto?</h5>
            <dl class="row">
                <dt class="col-sm-4">Nombre Comercial</dt>
                <dd class="col-sm-8">@Model.NombreComercial</dd>
                <dt class="col-sm-4">Laboratorio</dt>
                <dd class="col-sm-8">@Model.Laboratorio</dd>
                <dt class="col-sm-4">Forma Farmacéutica</dt>
                <dd class="col-sm-8">@Model.FormaFarmaceutica</dd>
                <dt class="col-sm-4">Cantidad Presentación</dt>
                <dd class="col-sm-8">@Model.CantidadPresentacion</dd>
                <dt class="col-sm-4">Código de Barras</dt>
                <dd class="col-sm-8">@Model.CodigoBarras</dd>
                <dt class="col-sm-4">Droga</dt>
                <dd class="col-sm-8">@Model.Droga?.NombreCompleto</dd>
            </dl>
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-danger me-2"><i class="bi bi-trash"></i> Eliminar</button>
                    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>