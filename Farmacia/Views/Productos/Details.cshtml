@model Farmacia.Models.Producto

@{
    ViewData["Title"] = "Detalle de Producto";
}

<div class="container my-4">
    <div class="card shadow-sm">
        <div class="card-header bg-info text-white">
            <h3 class="mb-0"><i class="bi bi-info-circle"></i> Detalle de Producto</h3>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-4">Nombre Comercial</dt>
                <dd class="col-sm-8">@Model.NombreComercial</dd>
                <dt class="col-sm-4">Laboratorio</dt>
                <dd class="col-sm-8">@Model.Laboratorio</dd>
                <dt class="col-sm-4">Forma Farmacéutica</dt>
                <dd class="col-sm-8">@Model.FormaFarmaceutica</dd>
                <dt class="col-sm-4">Cantidad Presentación</dt>
                <dd class="col-sm-8">@Model.CantidadPresentacion</dd>
                <dt class="col-sm-4">Código de Barras</dt>
                <dd class="col-sm-8">@Model.CodigoBarras</dd>
                <dt class="col-sm-4">Activo</dt>
                <dd class="col-sm-8">@Model.Activo</dd>
                <dt class="col-sm-4">Fecha Alta</dt>
                <dd class="col-sm-8">@Model.FechaAlta?.ToShortDateString()</dd>
                <dt class="col-sm-4">Fecha Baja</dt>
                <dd class="col-sm-8">@Model.FechaBaja?.ToShortDateString()</dd>
                <dt class="col-sm-4">Droga</dt>
                <dd class="col-sm-8">@Model.Droga?.NombreCompleto</dd>
            </dl>
            <div class="d-flex justify-content-end">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary me-2"><i class="bi bi-pencil"></i> Editar</a>
                <a asp-action="Index" class="btn btn-secondary">Volver</a>
            </div>
        </div>
    </div>
</div>