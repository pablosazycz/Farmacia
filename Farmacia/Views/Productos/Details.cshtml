@model Farmacia.Models.Producto

@{
    ViewData["Title"] = "Detalle de Producto";
}

<div class="container my-4">
    <div class="card shadow-sm">
        <div class="card-header bg-success text-white">
            <h4 class="mb-0"><i class="bi bi-info-circle"></i> Detalle de Producto</h4>
        </div>
        <div class="card-body">
            <table class="table table-borderless mb-0">
                <tbody>
                    <tr>
                        <th class="w-50 text-end">Nombre Comercial</th>
                        <td>@Model.NombreComercial</td>
                    </tr>
                    <tr>
                        <th class="text-end">Laboratorio</th>
                        <td>@Model.Laboratorio</td>
                    </tr>
                    <tr>
                        <th class="text-end">Forma Farmacéutica</th>
                        <td>@Model.FormaFarmaceutica</td>
                    </tr>
                    <tr>
                        <th class="text-end">Cantidad Presentación</th>
                        <td>@Model.CantidadPresentacion</td>
                    </tr>
                    <tr>
                        <th class="text-end">Código de Barras</th>
                        <td>@Model.CodigoBarras</td>
                    </tr>
                    <tr>
                        <th class="text-end">Activo</th>
                        <td>
                            @if (Model.Activo)
                            {
                                <span class="badge bg-success">Sí</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">No</span>
                            }
                        </td>
                    </tr>
                    <tr>
                        <th class="text-end">Fecha Alta</th>
                        <td>@Model.FechaAlta?.ToShortDateString()</td>
                    </tr>
                    <tr>
                        <th class="text-end">Fecha Baja</th>
                        <td>@Model.FechaBaja?.ToShortDateString()</td>
                    </tr>
                    <tr>
                        <th class="text-end">Droga</th>
                        <td>@Model.Droga?.NombreCompleto</td>
                    </tr>
                </tbody>
            </table>
            <div class="d-flex justify-content-end mt-4">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-success me-2"><i class="bi bi-pencil"></i> Editar</a>
                <a asp-action="Index" class="btn btn-outline-secondary">Volver</a>
            </div>
        </div>
    </div>
</div>