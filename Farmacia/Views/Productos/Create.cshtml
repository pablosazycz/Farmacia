@model Farmacia.Models.Producto

@{
    ViewData["Title"] = "Nuevo Producto";
}

<div class="container my-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0"><i class="bi bi-plus-circle"></i> Nuevo Producto</h3>
        </div>
        <div class="card-body">
            <form asp-action="Create" autocomplete="off">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="NombreComercial" class="form-label"></label>
                        <input asp-for="NombreComercial" class="form-control" />
                        <span asp-validation-for="NombreComercial" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Laboratorio" class="form-label"></label>
                        <input asp-for="Laboratorio" class="form-control" />
                        <span asp-validation-for="Laboratorio" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="FormaFarmaceutica" class="form-label"></label>
                        <input asp-for="FormaFarmaceutica" class="form-control" />
                        <span asp-validation-for="FormaFarmaceutica" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="CantidadPresentacion" class="form-label"></label>
                        <input asp-for="CantidadPresentacion" class="form-control" />
                        <span asp-validation-for="CantidadPresentacion" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="CodigoBarras" class="form-label"></label>
                        <input asp-for="CodigoBarras" class="form-control" />
                        <span asp-validation-for="CodigoBarras" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="DrogaId" class="form-label"></label>
                        <select asp-for="DrogaId" class="form-select" asp-items="ViewBag.Drogas"></select>
                        <span asp-validation-for="DrogaId" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 d-flex align-items-center">
                        <div class="form-check">
                            <input class="form-check-input" asp-for="Activo" />
                            <label class="form-check-label" asp-for="Activo"></label>
                        </div>
                    </div>
                </div>
                <div class="d-flex justify-content-end mt-4">
                    <button type="submit" class="btn btn-lg btn-primary">
                        <i class="bi bi-check-circle"></i> Guardar
                    </button>
                    <a asp-action="Index" class="btn btn-secondary ms-2">Volver</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}