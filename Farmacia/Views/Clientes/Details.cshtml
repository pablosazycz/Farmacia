@model Farmacia.Models.Cliente

@{
    ViewData["Title"] = "Detalle de Cliente";
    var historial = ViewBag.HistorialPuntos as List<Farmacia.Models.ClientePunto>;
}

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="card shadow-sm border-0 mt-4 mb-4">
            <div class="card-header bg-success text-white">
                <h4 class="mb-0">Detalle de Cliente</h4>
            </div>
            <div class="card-body">
                <dl class="row mb-0">
                    <dt class="col-sm-4">Nombre</dt>
                    <dd class="col-sm-8">@Model.Nombre</dd>
                    <dt class="col-sm-4">Apellido</dt>
                    <dd class="col-sm-8">@Model.Apellido</dd>
                    <dt class="col-sm-4">DNI</dt>
                    <dd class="col-sm-8">@Model.Dni</dd>
                    <dt class="col-sm-4">Teléfono</dt>
                    <dd class="col-sm-8">@Model.Telefono</dd>
                    <dt class="col-sm-4">Email</dt>
                    <dd class="col-sm-8">@Model.Email</dd>
                    <dt class="col-sm-4">Domicilio</dt>
                    <dd class="col-sm-8">@Model.Domicilio</dd>
                </dl>
                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Editar</a>
                    <a asp-action="Index" class="btn btn-outline-secondary">Volver al listado</a>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-md-10">
        <div class="card shadow-sm border-0 mb-4">
            <div class="card-header bg-light">
                <h5 class="mb-0 text-success">Historial de puntos</h5>
            </div>
            <div class="card-body">
                @if (historial != null && historial.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped align-middle">
                            <thead class="table-success">
                                <tr>
                                    <th>Fecha</th>
                                    <th>Puntos</th>
                                    <th>Motivo</th>
                                    <th>Promoción</th>
                                    <th>Venta</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var mov in historial)
                                {
                                    <tr>
                                        <td>@mov.Fecha.ToString("dd/MM/yyyy HH:mm")</td>
                                        <td>@mov.Puntos</td>
                                        <td>@mov.Motivo</td>
                                        <td>@mov.Promocion?.Nombre</td>
                                        <td>@mov.VentaId</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <p class="text-muted mb-0">Sin movimientos de puntos.</p>
                }
            </div>
        </div>
    </div>
</div>