@model Farmacia.Models.Droga

@{
    ViewData["Title"] = "Eliminar Droga";
}

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="card shadow-sm border-0 mt-4">
            <div class="card-header bg-danger text-white">
                <h4 class="mb-0">Eliminar Droga Genérica</h4>
            </div>
            <div class="card-body">
                <h5 class="mb-3">¿Estás seguro que deseas eliminar esta droga?</h5>
                <dl class="row mb-4">
                    <dt class="col-sm-4">Nombre</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Nombre)</dd>
                    <dt class="col-sm-4">Concentración</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Concentracion)</dd>
                    <dt class="col-sm-4">Stock</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Stock)</dd>
                    <dt class="col-sm-4">Stock Mínimo</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.StockMinimo)</dd>
                    <dt class="col-sm-4">Stock Máximo</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.StockMaximo)</dd>
                    <dt class="col-sm-4">Requiere Receta</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.RequiereReceta)</dd>
                    <dt class="col-sm-4">Activo</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Activo)</dd>
                    <dt class="col-sm-4">Fecha Alta</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.FechaAlta)</dd>
                </dl>
                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <div class="d-flex justify-content-between">
                        <button type="submit" class="btn btn-danger px-4">Eliminar</button>
                        <a asp-action="Index" class="btn btn-outline-secondary">Cancelar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>