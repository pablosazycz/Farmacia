@model List<(Farmacia.Models.Producto producto, int cantidadVendida)>

@{
    ViewData["Title"] = "Productos de Alta Rotación";
}

<div class="row justify-content-center">
    <div class="col-md-10">
        <div class="card shadow-sm border-0 mt-4">
            <div class="card-header bg-success text-white">
                <h4 class="mb-0">Productos de Alta Rotación (último mes)</h4>
            </div>
            <div class="card-body">
                <table class="table table-striped align-middle" id="tablaAltaRotacion">
                    <thead class="table-success">
                        <tr>
                            <th>Producto</th>
                            <th>Cantidad Vendida</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.producto.NombreComercial</td>
                                <td>@item.cantidadVendida</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#tablaAltaRotacion').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.6/i18n/es-ES.json'
                },
                pageLength: 10,
                order: [[1, 'desc']]
            });
        });
    </script>
}