@model Farmacia.Models.MovimientoStock

@{
    ViewData["Title"] = "Detalle de Movimiento de Stock";
}

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="card shadow-sm border-0 mt-4">
            <div class="card-header bg-success text-white">
                <h4 class="mb-0"><i class="bi bi-clipboard-data"></i> Detalle de Movimiento de Stock</h4>
            </div>
            <div class="card-body">
                <table class="table table-borderless mb-0">
                    <tbody>
                        <tr>
                            <th class="w-50 text-end">Fecha</th>
                            <td>@Model.Fecha.ToString("dd/MM/yyyy HH:mm")</td>
                        </tr>
                        <tr>
                            <th class="text-end">Tipo de Movimiento</th>
                            <td>@Model.TipoMovimiento</td>
                        </tr>
                        <tr>
                            <th class="text-end">Droga</th>
                            <td>@Model.Droga?.NombreCompleto</td>
                        </tr>
                        <tr>
                            <th class="text-end">Producto</th>
                            <td>@Model.Producto?.NombreComercial @Model.Producto?.PresentacionCompleta</td>
                        </tr>
                        <tr>
                            <th class="text-end">Cantidad</th>
                            <td>@Model.Cantidad</td>
                        </tr>
                        <tr>
                            <th class="text-end">Código Lote</th>
                            <td>@Model.CodigoLote</td>
                        </tr>
                        <tr>
                            <th class="text-end">Fecha de Vencimiento</th>
                            <td>
                                @(Model.Lote != null ? Model.Lote.FechaVencimiento.ToString("dd/MM/yyyy") : (Model.FechaVencimiento != default ? Model.FechaVencimiento.ToString("dd/MM/yyyy") : "-"))
                            </td>
                        </tr>
                        <tr>
                            <th class="text-end">Precio de Compra</th>
                            <td>
                                @if (Model.PrecioCompra > 0)
                                {
                                    @($"${Model.PrecioCompra:N2}")
                                }
                                else
                                {
                                    <span class="text-muted">-</span>
                                }
                            </td>
                        </tr>
                        <tr>
                            <th class="text-end">Usuario</th>
                            <td>@Model.Usuario?.UserName</td>
                        </tr>
                        <tr>
                            <th class="text-end">Observaciones</th>
                            <td>@Model.Observaciones</td>
                        </tr>
                    </tbody>
                </table>
                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-outline-secondary">Volver al listado</a>
                </div>
            </div>
        </div>
    </div>
</div>