@model List<Farmacia.Models.Producto>

<h2>Productos para Reposición</h2>
<table class="table table-striped" id="example">
    <thead>
        <tr>
            <th>Producto</th>
            <th>Stock Actual</th>
            <th>Stock Mínimo</th>
            <th>Sugerencia</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.NombreComercial</td>
                <td>@(p.Lotes?.Sum(l => l.Cantidad) ?? 0)</td>
                <td>@p.Droga?.StockMinimo</td>
                <td>
                    <span class="text-danger">Reponer</span>
                </td>
            </tr>
        }
    </tbody>
</table>
@section Scripts {
    <script>
        $(document).ready(function () {
            $('#example').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.6/i18n/es-ES.json'
                },
                pageLength: 10,
                order: [[0, 'desc']] // Ordena por la columna Fecha de forma descendente
            });
        });
    </script>
}