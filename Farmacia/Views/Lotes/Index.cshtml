@model IEnumerable<Farmacia.Models.Lote>

@{
    ViewData["Title"] = "Lotes";
}

<div class="row">
    <div class="col-12">
        <div class="card shadow-sm border-0 mt-4">
            <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
                <h4 class="mb-0">Lotes</h4>
                <a asp-action="Create" class="btn btn-light text-success fw-bold">
                    <i class="bi bi-plus-circle"></i> Nuevo Lote
                </a>
            </div>
            <div class="card-body">
                <table class="table table-striped align-middle" id="tablaLotes">
                    <thead class="table-success">
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.CodigoLote)</th>
                            <th>@Html.DisplayNameFor(model => model.FechaVencimiento)</th>
                            <th>@Html.DisplayNameFor(model => model.Producto)</th>
                            <th>@Html.DisplayNameFor(model => model.Cantidad)</th>
                            <th>@Html.DisplayNameFor(model => model.Producto.TipoPresentacion)</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.CodigoLote)</td>
                                <td>@Html.DisplayFor(modelItem => item.FechaVencimiento)</td>
                                <td>@Html.DisplayFor(modelItem => item.Producto.NombreComercial)</td>
                                <td>@Html.DisplayFor(modelItem => item.Cantidad)</td>
                                <td>@Html.DisplayFor(model => item.Producto.PresentacionCompleta)</td>
                                <td class="text-center">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning me-1">Editar</a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info me-1 text-white">Detalles</a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Eliminar</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#tablaLotes').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.6/i18n/es-ES.json'
                },
                pageLength: 10,
                order: [[1, 'asc']]
            });
        });
    </script>
}