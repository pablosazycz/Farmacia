@model Farmacia.Models.Lote

@{
    ViewData["Title"] = "Editar Lote";
}

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="card shadow-sm border-0 mt-4">
            <div class="card-header bg-success text-white">
                <h4 class="mb-0">Editar Lote</h4>
            </div>
            <div class="card-body">
                <form asp-action="Edit" autocomplete="off">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    <input type="hidden" asp-for="Id" />
                    <div class="mb-3">
                        <label asp-for="CodigoLote" class="form-label"></label>
                        <input asp-for="CodigoLote" class="form-control" />
                        <span asp-validation-for="CodigoLote" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="FechaVencimiento" class="form-label"></label>
                        <input asp-for="FechaVencimiento" class="form-control" />
                        <span asp-validation-for="FechaVencimiento" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Cantidad" class="form-label"></label>
                        <input asp-for="Cantidad" class="form-control" />
                        <span asp-validation-for="Cantidad" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="ProductoId" class="form-label"></label>
                        <select asp-for="ProductoId" class="form-select" asp-items="ViewBag.ProductoId"></select>
                        <span asp-validation-for="ProductoId" class="text-danger"></span>
                    </div>
                    <div class="d-flex justify-content-between">
                        <button type="submit" class="btn btn-success px-4">Guardar</button>
                        <a asp-action="Index" class="btn btn-outline-secondary">Volver</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}