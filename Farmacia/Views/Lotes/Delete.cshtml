@model Farmacia.Models.Lote

@{
    ViewData["Title"] = "Eliminar Lote";
}

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="card shadow-sm border-0 mt-4">
            <div class="card-header bg-danger text-white">
                <h4 class="mb-0">Eliminar Lote</h4>
            </div>
            <div class="card-body">
                <h5 class="mb-3">¿Estás seguro que deseas eliminar este lote?</h5>
                <dl class="row mb-4">
                    <dt class="col-sm-4">Código Lote</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.CodigoLote)</dd>
                    <dt class="col-sm-4">Fecha de Vencimiento</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.FechaVencimiento)</dd>
                    <dt class="col-sm-4">Cantidad</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Cantidad)</dd>
                    <dt class="col-sm-4">Producto</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Producto.FormaFarmaceutica)</dd>
                </dl>
                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <div class="d-flex justify-content-between">
                        <button type="submit" class="btn btn-danger px-4">Eliminar</button>
                        <a asp-action="Index" class="btn btn-outline-secondary">Cancelar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>