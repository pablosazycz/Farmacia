@model IEnumerable<Farmacia.Models.Promocion>

@{
    ViewData["Title"] = "Promociones";
}

<h2>Promociones</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Nueva Promoción</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Descuento</th>
            <th>Tipo</th>
            <th>Cantidad Mínima</th>
            <th>Periodo</th>
            <th>Activa</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Nombre</td>
            <td>@item.Descuento.ToString("P")</td>
            <td>@item.Tipo</td>
            <td>@item.CantidadMinima</td>
            <td>@item.Periodo</td>
            <td>@(item.Activa ? "Sí" : "No")</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Editar</a>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Detalles</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Eliminar</a>
            </td>
        </tr>
    }
    </tbody>
</table>