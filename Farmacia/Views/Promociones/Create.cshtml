@model Farmacia.Models.Promocion

@{
    ViewData["Title"] = "Nueva Promoción";
}

<div class="container my-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0"><i class="bi bi-plus-circle"></i> Nueva Promoción</h3>
        </div>
        <div class="card-body">
            <form asp-action="Create" autocomplete="off">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="Nombre" class="form-label"></label>
                        <input asp-for="Nombre" class="form-control" />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Descuento" class="form-label"></label>
                        <input asp-for="Descuento" class="form-control" />
                        <span asp-validation-for="Descuento" class="text-danger"></span>
                        <small class="form-text text-muted">Ejemplo: 0.10 para 10%</small>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Tipo" class="form-label"></label>
                        <input asp-for="Tipo" class="form-control" />
                        <span asp-validation-for="Tipo" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="CantidadMinima" class="form-label"></label>
                        <input asp-for="CantidadMinima" class="form-control" />
                        <span asp-validation-for="CantidadMinima" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Periodo" class="form-label"></label>
                        <input asp-for="Periodo" class="form-control" />
                        <span asp-validation-for="Periodo" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 d-flex align-items-center">
                        <div class="form-check">
                            <input asp-for="Activa" class="form-check-input" />
                            <label asp-for="Activa" class="form-check-label"></label>
                        </div>
                    </div>
                </div>
                <div class="d-flex justify-content-end mt-4">
                    <button type="submit" class="btn btn-lg btn-primary">
                        <i class="bi bi-check-circle"></i> Guardar
                    </button>
                    <a asp-action="Index" class="btn btn-secondary ms-2">Volver</a>
                </div>
            </form>
        </div>
    </div>
</div>