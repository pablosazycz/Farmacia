@model Farmacia.Models.Promocion

@{
    ViewData["Title"] = "Detalle de Promoción";
}

<div class="container my-4">
    <div class="card shadow-sm">
        <div class="card-header bg-success text-white">
            <h4 class="mb-0"><i class="bi bi-info-circle"></i> Detalle de Promoción</h4>
        </div>
        <div class="card-body">
            <table class="table table-borderless mb-0">
                <tbody>
                    <tr>
                        <th class="w-50 text-end">Nombre</th>
                        <td>@Model.Nombre</td>
                    </tr>
                    <tr>
                        <th class="text-end">Descuento</th>
                        <td>@Model.Descuento:P</td>
                    </tr>
                    <tr>
                        <th class="text-end">Tipo</th>
                        <td>@Model.Tipo</td>
                    </tr>
                    <tr>
                        <th class="text-end">Cantidad Mínima</th>
                        <td>@Model.CantidadMinima</td>
                    </tr>
                    <tr>
                        <th class="text-end">Periodo</th>
                        <td>@Model.Periodo</td>
                    </tr>
                    <tr>
                        <th class="text-end">Activa</th>
                        <td>
                            @if (Model.Activa)
                            {
                                <span class="badge bg-success">Sí</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">No</span>
                            }
                        </td>
                    </tr>
                </tbody>
            </table>
            <div class="d-flex justify-content-end mt-4">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-success me-2"><i class="bi bi-pencil"></i> Editar</a>
                <a asp-action="Index" class="btn btn-outline-secondary">Volver</a>
            </div>
        </div>
    </div>
</div>