@model IEnumerable<Farmacia.Models.Venta>

@{
    ViewData["Title"] = "Ventas";
}

<h2>Ventas</h2>

<p>
    <a asp-action="Crear" class="btn btn-primary">Nueva Venta</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Fecha</th>
            <th>Cliente</th>
            <th>Total</th>
            <th>Descuento</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var venta in Model)
    {
        <tr>
            <td>@venta.Fecha.ToString("dd/MM/yyyy HH:mm")</td>
            <td>@venta.Cliente?.Nombre @venta.Cliente?.Apellido</td>
            <td>$@venta.Total.ToString("F2")</td>
            <td>
                @if (venta.DescuentoAplicado.HasValue && venta.DescuentoAplicado.Value > 0)
                {
                    <span class="text-success">- $@venta.DescuentoAplicado.Value.ToString("F2")</span>
                }
                else
                {
                    <span>-</span>
                }
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@venta.Id" class="btn btn-sm btn-info">Detalles</a>
                <a asp-action="Edit" asp-route-id="@venta.Id" class="btn btn-sm btn-warning">Editar</a>
                <a asp-action="Delete" asp-route-id="@venta.Id" class="btn btn-sm btn-danger">Eliminar</a>
                <a asp-action="Ticket" asp-route-id="@venta.Id" class="btn btn-sm btn-secondary" target="_blank">
                    <i class="bi bi-printer"></i> Ticket
                </a>
            </td>
        </tr>
    }
    </tbody>
</table>