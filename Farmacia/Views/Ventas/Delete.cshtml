@model Farmacia.Models.Venta

@{
    ViewData["Title"] = "Eliminar Venta";
}

<h2>Eliminar Venta</h2>

<h4>¿Estás seguro que deseas eliminar esta venta?</h4>
<dl class="row">
    <dt class="col-sm-3">Fecha</dt>
    <dd class="col-sm-9">@Model.Fecha.ToString("dd/MM/yyyy HH:mm")</dd>
    <dt class="col-sm-3">Cliente</dt>
    <dd class="col-sm-9">@Model.Cliente?.Nombre @Model.Cliente?.Apellido</dd>
    <dt class="col-sm-3">Total</dt>
    <dd class="col-sm-9">$@Model.Total.ToString("F2")</dd>
</dl>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>