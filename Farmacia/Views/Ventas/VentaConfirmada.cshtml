@{
    ViewData["Title"] = "Venta confirmada";
    var ventaId = ViewBag.VentaId;
}
<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-7">
            <div class="card shadow-sm border-success">
                <div class="card-header bg-success text-white">
                    <h3 class="mb-0"><i class="bi bi-check-circle"></i> Venta registrada correctamente</h3>
                </div>
                <div class="card-body text-center">
                    <p class="fs-5 mb-4">¡La venta se registró exitosamente!</p>
                    <div class="mb-3">
                        <i class="bi bi-printer display-4 text-secondary"></i>
                        <p class="mt-2">El ticket se abrirá automáticamente en una nueva pestaña.</p>
                    </div>
                    <a href="@Url.Action("Index", "Ventas")" class="btn btn-outline-success">
                        <i class="bi bi-arrow-left"></i> Volver al listado de ventas
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    window.open('@Url.Action("Ticket", "Ventas", new { id = ventaId })', '_blank');
    setTimeout(function() {
        window.location.href = '@Url.Action("Index", "Ventas")';
    }, 3000);
</script>