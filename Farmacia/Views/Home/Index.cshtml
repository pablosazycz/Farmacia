@{
    ViewData["Title"] = "Inicio";
}

<div class="position-fixed top-0 start-50 translate-middle-x p-3" style="z-index: 11">

    @* Toast para productos próximos a vencer *@
    @if (!string.IsNullOrEmpty(ViewBag.MensajeProximos))
    {
        <div id="toastProximos" class="toast align-items-center bg-warning text-dark border-0 mb-2" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="d-flex">
                <div class="toast-body">
                    <a href="@Url.Action("ProxAVencer", "Home")" class="text-dark text-decoration-underline">
                        @ViewBag.MensajeProximos Haz clic aquí para verlos.
                    </a>
                </div>
                <button type="button" class="btn-close me-2 m-auto" data-bs-dismiss="toast" aria-label="Cerrar"></button>
            </div>
        </div>
    }

    @* Toast para productos vencidos *@
    @if (!string.IsNullOrEmpty(ViewBag.MensajeVencidos))
    {
        <div id="toastVencidos" class="toast align-items-center bg-danger text-white border-0 mb-2" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="d-flex">
                <div class="toast-body">
                    <a href="@Url.Action("Vencidos", "Home")" class="text-white text-decoration-underline">
                        @ViewBag.MensajeVencidos Haz clic aquí para verlos.
                    </a>
                </div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Cerrar"></button>
            </div>
        </div>
    }

    @* Toast para stock crítico *@
    @if (!string.IsNullOrEmpty(ViewBag.AlertaStock))
    {
        <div id="toastStockCritico" class="toast align-items-center bg-warning text-dark border-0 mb-2" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="d-flex">
                <div class="toast-body">
                    <a href="@Url.Action("StockCritico", "Home")" class="text-dark text-decoration-underline">
                        @ViewBag.AlertaStock Haz clic aquí para ver productos en stock crítico.
                    </a>
                </div>
                <button type="button" class="btn-close me-2 m-auto" data-bs-dismiss="toast" aria-label="Cerrar"></button>
            </div>
        </div>
    }

</div>

<h2>Bienvenido a Farmacia SmartFarma</h2>
<p>Accesos rápidos:</p>

<div class="row row-cols-1 row-cols-md-3 g-4">
    <div class="col">
        <div class="card h-100 text-center">
            <div class="card-body">
                <a asp-controller="Clientes" asp-action="Index" class="btn btn-primary w-100">
                    <i class="bi bi-people"></i> Clientes
                </a>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card h-100 text-center">
            <div class="card-body">
                <a asp-controller="Drogas" asp-action="Index" class="btn btn-primary w-100">
                    <i class="bi bi-capsule"></i> Drogas
                </a>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card h-100 text-center">
            <div class="card-body">
                <a asp-controller="Productos" asp-action="Index" class="btn btn-primary w-100">
                    <i class="bi bi-box"></i> Productos
                </a>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card h-100 text-center">
            <div class="card-body">
                <a asp-controller="Promociones" asp-action="Index" class="btn btn-primary w-100">
                    <i class="bi bi-percent"></i> Promociones
                </a>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card h-100 text-center">
            <div class="card-body">
                <a asp-controller="Ventas" asp-action="Index" class="btn btn-primary w-100">
                    <i class="bi bi-receipt"></i> Ventas
                </a>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card h-100 text-center">
            <div class="card-body">
                <a asp-controller="MovimientoStock" asp-action="Index" class="btn btn-primary w-100">
                    <i class="bi bi-clipboard-data"></i> Reportes stock
                </a>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card h-100 text-center">
            <div class="card-body">
                <a asp-controller="Lotes" asp-action="Index" class="btn btn-primary w-100">
                    <i class="bi bi-archive"></i> Lotes
                </a>
            </div>
        </div>
    </div>

    @if (User.IsInRole("Administrador"))
    {
        <div class="col">
            <div class="card h-100 text-center">
                <div class="card-body">
                    <a asp-area="Identity" asp-page="/Admin/ManageUsers" class="btn btn-primary w-100">
                        <i class="bi bi-people"></i> Gestion de usuarios
                    </a>
                    
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        window.addEventListener('DOMContentLoaded', (event) => {
            var toastProximos = document.getElementById('toastProximos');
            if (toastProximos) new bootstrap.Toast(toastProximos).show();

            var toastVencidos = document.getElementById('toastVencidos');
            if (toastVencidos) new bootstrap.Toast(toastVencidos).show();

            var toastStockCritico = document.getElementById('toastStockCritico');
            if (toastStockCritico) new bootstrap.Toast(toastStockCritico).show();
        });
    </script>
}
