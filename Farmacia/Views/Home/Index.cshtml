@{
    ViewData["Title"] = "Inicio";
}

<!-- Toasts de alertas -->
<div class="position-fixed top-0 start-50 translate-middle-x p-3" style="z-index: 11">
    @if (!string.IsNullOrEmpty(ViewBag.MensajeProximos))
    {
        <div id="toastProximos" class="toast align-items-center bg-warning text-dark border-0 mb-2 shadow" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="d-flex">
                <div class="toast-body">
                    <a href="@Url.Action("ProxAVencer", "Home")" class="text-dark text-decoration-underline">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>
                        @ViewBag.MensajeProximos Haz clic aquí para verlos.
                    </a>
                </div>
                <button type="button" class="btn-close me-2 m-auto" data-bs-dismiss="toast" aria-label="Cerrar"></button>
            </div>
        </div>
    }
    @if (!string.IsNullOrEmpty(ViewBag.MensajeVencidos))
    {
        <div id="toastVencidos" class="toast align-items-center bg-danger text-white border-0 mb-2 shadow" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="d-flex">
                <div class="toast-body">
                    <a href="@Url.Action("Vencidos", "Home")" class="text-white text-decoration-underline">
                        <i class="bi bi-x-octagon-fill me-2"></i>
                        @ViewBag.MensajeVencidos Haz clic aquí para verlos.
                    </a>
                </div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Cerrar"></button>
            </div>
        </div>
    }
    @if (!string.IsNullOrEmpty(ViewBag.AlertaStock))
    {
        <div id="toastStockCritico" class="toast align-items-center bg-warning text-dark border-0 mb-2 shadow" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="d-flex">
                <div class="toast-body">
                    <a href="@Url.Action("StockCritico", "Home")" class="text-dark text-decoration-underline">
                        <i class="bi bi-exclamation-circle-fill me-2"></i>
                        @ViewBag.AlertaStock Haz clic aquí para ver productos en stock crítico.
                    </a>
                </div>
                <button type="button" class="btn-close me-2 m-auto" data-bs-dismiss="toast" aria-label="Cerrar"></button>
            </div>
        </div>
    }
</div>

<!-- Encabezado principal -->
<div class="text-center my-5">
    <h1 class="display-4 fw-bold text-success mb-3">
        <i class="bi bi-heart-pulse-fill me-2"></i>SmartFarma
    </h1>
    <p class="lead text-secondary mb-4">Gestión integral y moderna para tu farmacia</p>
</div>

<!-- Accesos rápidos -->
<div class="container">
    <div class="row row-cols-1 row-cols-md-3 g-4 justify-content-center">
        <div class="col">
            <div class="card h-100 text-center shadow border-0">
                <div class="card-body">
                    <a asp-controller="Clientes" asp-action="Index" class="btn btn-success btn-lg w-100 py-3">
                        <i class="bi bi-people display-5 mb-2"></i><br />
                        Clientes
                    </a>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card h-100 text-center shadow border-0">
                <div class="card-body">
                    <a asp-controller="Drogas" asp-action="Index" class="btn btn-success btn-lg w-100 py-3">
                        <i class="bi bi-capsule display-5 mb-2"></i><br />
                        Drogas
                    </a>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card h-100 text-center shadow border-0">
                <div class="card-body">
                    <a asp-controller="Productos" asp-action="Index" class="btn btn-success btn-lg w-100 py-3">
                        <i class="bi bi-box display-5 mb-2"></i><br />
                        Productos
                    </a>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card h-100 text-center shadow border-0">
                <div class="card-body">
                    <a asp-controller="Promociones" asp-action="Index" class="btn btn-success btn-lg w-100 py-3">
                        <i class="bi bi-percent display-5 mb-2"></i><br />
                        Promociones
                    </a>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card h-100 text-center shadow border-0">
                <div class="card-body">
                    <a asp-controller="Ventas" asp-action="Index" class="btn btn-success btn-lg w-100 py-3">
                        <i class="bi bi-receipt display-5 mb-2"></i><br />
                        Ventas
                    </a>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card h-100 text-center shadow border-0">
                <div class="card-body">
                    <a asp-controller="MovimientoStock" asp-action="Index" class="btn btn-success btn-lg w-100 py-3">
                        <i class="bi bi-clipboard-data display-5 mb-2"></i><br />
                        Reportes stock
                    </a>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card h-100 text-center shadow border-0">
                <div class="card-body">
                    <a asp-controller="Lotes" asp-action="Index" class="btn btn-success btn-lg w-100 py-3">
                        <i class="bi bi-archive display-5 mb-2"></i><br />
                        Lotes
                    </a>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card h-100 text-center shadow border-0">
                <div class="card-body">
                    <a asp-controller="Home" asp-action="Vencidos" class="btn btn-danger btn-lg w-100 py-3">
                        <i class="bi bi-x-octagon display-5 mb-2"></i><br />
                        Vencidos
                    </a>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card h-100 text-center shadow border-0">
                <div class="card-body">
                    <a asp-controller="Home" asp-action="ProxAVencer" class="btn btn-warning btn-lg w-100 py-3 text-dark">
                        <i class="bi bi-exclamation-triangle display-5 mb-2"></i><br />
                        Próx. a Vencer
                    </a>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card h-100 text-center shadow border-0">
                <div class="card-body">
                    <a asp-controller="Home" asp-action="StockCritico" class="btn btn-info btn-lg w-100 py-3 text-dark">
                        <i class="bi bi-exclamation-circle display-5 mb-2"></i><br />
                        Stock Crítico
                    </a>
                </div>
            </div>
        </div>
        @if (User.IsInRole("Administrador"))
        {
            <div class="col">
                <div class="card h-100 text-center shadow border-0">
                    <div class="card-body">
                        <a asp-area="Identity" asp-page="/Admin/ManageUsers" class="btn btn-success btn-lg w-100 py-3">
                            <i class="bi bi-person-gear display-5 mb-2"></i><br />
                            Gestión de usuarios
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        window.addEventListener('DOMContentLoaded', (event) => {
            var toastProximos = document.getElementById('toastProximos');
            if (toastProximos) new bootstrap.Toast(toastProximos).show();

            var toastVencidos = document.getElementById('toastVencidos');
            if (toastVencidos) new bootstrap.Toast(toastVencidos).show();

            var toastStockCritico = document.getElementById('toastStockCritico');
            if (toastStockCritico) new bootstrap.Toast(toastStockCritico).show();
        });
    </script>
}